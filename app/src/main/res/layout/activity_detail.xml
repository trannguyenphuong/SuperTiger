<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4">

    <ImageView
        android:id="@+id/imvLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:text="Người chơi Nguyễn Văn Tài vừa nổ hũ thành công. Người chơi Mê Gêm vừa nổ hũ thành công.
        Người chơi Gió vừa nổ hũ thành công. Người chơi Lê Văn Luyện vừa nổ hũ thành công.
        Người chơi Trần Văn Trọng vừa nổ hũ thành công."
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imvLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imvLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imvSignUp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@id/imvLogin"
            app:layout_constraintStart_toEndOf="@id/imvLogin"
            app:layout_constraintTop_toTopOf="@id/imvLogin" />

        <ImageView
            android:id="@+id/imvNapTien"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/imvLogin"
            app:layout_constraintStart_toEndOf="@id/imvSupport"
            app:layout_constraintTop_toTopOf="@id/imvLogin" />

        <ImageView
            android:id="@+id/imvSupport"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@id/imvLogin"
            app:layout_constraintStart_toEndOf="@id/imvSignUp"
            app:layout_constraintTop_toTopOf="@id/imvLogin" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/viewButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imvLogo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/game_1"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/game_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/game_2"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/game_3"
                app:layout_constraintStart_toEndOf="@id/game_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/game_3"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/game_4"
                app:layout_constraintStart_toEndOf="@id/game_2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/game_4"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/game_5"
                app:layout_constraintStart_toEndOf="@id/game_3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/game_5"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/game_6"
                app:layout_constraintStart_toEndOf="@id/game_4"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/game_6"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/game_5"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>